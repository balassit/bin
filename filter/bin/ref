#!/bin/bash

set -e

pattern=$1

case "$GITHUB_REF" in
  "")
    echo "\$GITHUB_REF is not set"
    exit 1
    ;;
  $pattern)
    echo "$GITHUB_REF matches $pattern"
    exit 0
    ;;
  *)
    if [[ $(echo "$pattern" | sed -E "s/^([^/]*\/){2}//") == !* ]] ;
    then
        echo "$GITHUB_REF is a negation of $pattern"
        exit 0
    fi
    echo "$GITHUB_REF does not match $pattern"
    exit 78
esac
